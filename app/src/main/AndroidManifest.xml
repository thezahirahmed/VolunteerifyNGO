<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eleganzit.volunteerifyngo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".LoginSessionActivity" />
        <activity android:name=".LoginSelectedActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".RegisterConfirmationActivity" />
        <activity android:name=".NewsFeedActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".MessageActivity" />
        <activity
            android:name=".ChatActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".NewGroupActivity"></activity>
    </application>

</manifest>