<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/msg_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:src="@drawable/user"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profilePic"
        android:layout_toLeftOf="@+id/end"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp">

        <com.eleganzit.volunteerifyngo.utils.TextViewRobotoBold
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Username"
            android:textColor="#000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
            android:id="@+id/events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 Sponsored Events"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="There are 28 people in this group"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    </LinearLayout>

  <LinearLayout
      android:id="@+id/end"
      android:layout_width="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/appGreen"
          android:layout_gravity="center"
          android:text="12:10 PM"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="1"
          android:maxWidth="40dp"
          android:singleLine="true"
          android:ellipsize="end"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
          android:layout_margin="4dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:background="@drawable/green_chat_count"
          android:textColor="#fff"/>

  </LinearLayout>


</RelativeLayout>
