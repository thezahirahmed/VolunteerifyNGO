<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/register_bg"
        android:src="@drawable/register_1"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#00ffffff"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <com.eleganzit.volunteerifyngo.utils.TextViewRobotoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S t e p s"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000"
                    android:textStyle="bold" />

            </LinearLayout>

            <include layout="@layout/register_input1"/>

            <include layout="@layout/register_input2"
                android:visibility="gone"/>
            <include layout="@layout/register_input3"
                android:visibility="gone"/>
            <include layout="@layout/register_input4"
                android:visibility="gone"/>
            <include layout="@layout/register_input5"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/back_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom"
                android:layout_margin="20dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/back_gray" />

                <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Back to "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#282828" />

                <com.eleganzit.volunteerifyngo.utils.TextViewRobotoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="SIGN IN"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#282828"
                    android:textStyle="bold" />

            </LinearLayout>



        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="29dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/volunteerify_logo" />
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/fab1"/>

    <include layout="@layout/fab2"
        android:visibility="gone"/>
    <include layout="@layout/fab3"
        android:visibility="gone"/>
    <include layout="@layout/fab4"
        android:visibility="gone"/>
    <include layout="@layout/fab5"
        android:visibility="gone"/>

</RelativeLayout>